<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/_50sdp"
    android:background="#092E87"
    android:orientation="vertical"
    tools:context=".MainScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center"
        android:background="#092E87"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/calculator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_50sdp"
            android:gravity="center|right"
            android:text="Bussiness Loan Calculator"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_gravity="center"
            android:padding="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:background="@color/background"
            android:src="@drawable/setting" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/card1"
                android:layout_width="@dimen/_290sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/shape_brodar">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:src="@drawable/bussinessloan" />

                <TextView
                    android:id="@+id/calculatorcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:gravity="center"
                    android:text="Bussiness Loan Calculator"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_19sdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="1"
                android:rowCount="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/card2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_weight="3"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_gravity="center_horizontal|center"
                            android:layout_marginTop="@dimen/_40sdp"
                            android:src="@drawable/mutualfund" />

                        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_gravity="bottom|center"
                            android:backgroundTint="@color/white"
                            android:clickable="false"
                            android:gravity="center"
                            android:text="Mutual Funds Sip"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp"

                            app:strokeColor="@color/white"


                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/card3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_weight="3"
                            android:layout_gravity="center_horizontal|center"
                            android:layout_marginTop="@dimen/_40sdp"
                            android:src="@drawable/banckingclculate" />

                        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_gravity="bottom|center"
                            android:backgroundTint="@color/white"
                            android:clickable="false"
                            android:gravity="center"
                            android:text="Banking Calc."
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp"

                            app:strokeColor="@color/white"


                            />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/card4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_weight="3"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_gravity="center_horizontal|center"
                            android:layout_marginTop="@dimen/_40sdp"
                            android:src="@drawable/loancalculate" />


                        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_gravity="bottom|center"

                            android:backgroundTint="@color/white"
                            android:clickable="false"
                            android:gravity="center"
                            android:text="loan calculator"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp"

                            app:strokeColor="@color/white"


                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/card5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_gravity="center_horizontal|center"
                            android:layout_marginTop="@dimen/_40sdp"
                            android:layout_weight="3"
                            android:src="@drawable/calculate" />

                        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_gravity="bottom|center"

                            android:backgroundTint="@color/white"
                            android:clickable="false"
                            android:gravity="center"
                            android:text="Calculator"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp"

                            app:strokeColor="@color/white"


                            />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/card6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"

                            android:layout_gravity="center_horizontal|center|center_vertical"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:src="@drawable/nearby" />

                        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="@dimen/_35sdp"
android:layout_marginTop="@dimen/_40sdp"

                            android:backgroundTint="@color/white"
                            android:clickable="false"
                            android:layout_gravity="bottom|center"
                            android:gravity="center"
                            android:text="Near By Me"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp"

                            app:strokeColor="@color/white"


                            />
                    </LinearLayout>


                </LinearLayout>

            </GridLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>