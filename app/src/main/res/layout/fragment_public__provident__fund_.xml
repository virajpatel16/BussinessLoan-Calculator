<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".Public_Provident_Fund_Fragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backpublic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_right" />

        <TextView
            android:id="@+id/calculator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Public Provident Fund"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/arrow_back_ios_new"
            android:visibility="invisible" />
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="40dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/publicprovident"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_240sdp"
                    android:layout_margin="@dimen/_8sdp"
                    android:padding="@dimen/_10sdp"
                    android:background="@drawable/border"
                    android:backgroundTint="@color/white"
                    android:orientation="vertical"
                    tools:ignore="MissingConstraints">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/InvestmentAmountPubliccard"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopEnd="@dimen/_5sdp"
                        app:boxCornerRadiusTopStart="@dimen/_5sdp"
                        app:boxStrokeColor="@color/blue"
                        app:cursorColor="@color/blue">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/InvestmentAmountedPublicittext"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:drawableRight="@drawable/baseline_currency_rupee_24"
                            android:hint="Investment Amount"
                            android:inputType="numberDecimal"
                            android:padding="@dimen/_1sdp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/_15sdp" />


                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ExpectrateofinterestPubliccard"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopEnd="@dimen/_5sdp"
                        app:boxCornerRadiusTopStart="@dimen/_5sdp"
                        app:boxStrokeColor="@color/blue"
                        app:cursorColor="@color/blue">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ExpectrateofinterestPublicEditText"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:drawableRight="@drawable/percent"
                            android:hint="Expected Rate of Interest"
                            android:inputType="numberDecimal"
                            android:padding="@dimen/_1sdp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/_15sdp" />


                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/TenurePubliccard"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopEnd="@dimen/_5sdp"
                        app:boxCornerRadiusTopStart="@dimen/_5sdp"
                        app:boxStrokeColor="@color/blue"
                        app:cursorColor="@color/blue">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/TenurePublicEdittext"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:hint="Tenure"
                            android:inputType="numberDecimal"
                            android:padding="@dimen/_1sdp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/_15sdp" />


                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/FirstEmiPubliccard"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopEnd="@dimen/_5sdp"
                        app:boxCornerRadiusTopStart="@dimen/_5sdp"
                        app:boxStrokeColor="@color/blue"
                        app:cursorColor="@color/blue">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/FirstEmiPublicEditext"

                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:drawableRight="@drawable/calendar_month"
                            android:focusable="false"
                            android:hint="First EMI"
                            android:inputType="numberDecimal"
                            android:onClick="showDatePickerDialog"
                            android:padding="@dimen/_1sdp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/_15sdp" />


                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/publiclayoutbutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"

                    android:weightSum="2"

                    app:layout_constraintTop_toBottomOf="@+id/FirstEmiPubliccard"
                    tools:ignore="ExtraText,MissingConstraints">

                    <ImageButton
                        android:id="@+id/calculatebuttonpublic"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/background"
                        android:scaleType="centerCrop"
                        android:src="@drawable/calculatebtn" />

                    <ImageButton
                        android:id="@+id/resetbuttonpublic"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/background"
                        android:scaleType="centerCrop"
                        android:src="@drawable/reset" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/resultinvestmentamountpublic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/investtxtpublic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:text="Investment Amount"
                            android:textColor="@color/white"
                            android:textSize="20dp" />


                        <EditText
                            android:id="@+id/answerinvestmentamountpublic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:drawableEnd="@drawable/baseline_currency_rupee_24"
                            android:focusable="false"
                            android:textColor="@color/white"
                            android:textStyle="bold"

                            app:layout_constraintTop_toBottomOf="@id/investtxtpublic" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/totalinterestvaluerecurringtxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:text="Total Interest Value"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            app:layout_constraintTop_toBottomOf="@+id/answerinvestmentamountpublic" />


                        <EditText
                            android:id="@+id/answertotalinterestvaluepublic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:drawableEnd="@drawable/baseline_currency_rupee_24"
                            android:focusable="false"
                            android:textColor="@color/blue"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@id/totalinterestvaluerecurringtxt" />


                        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                            android:id="@+id/savepublic"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:padding="@dimen/_1sdp"
                            android:text="save"
                            android:textColor="@color/background"
                            android:textSize="@dimen/_16sdp"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/resultmaturitypublic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mauritydatepublic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:text="Maturity Date"
                            android:textColor="@color/white"
                            android:textSize="20dp" />


                        <EditText
                            android:id="@+id/answermatururitydatepublic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:drawableEnd="@drawable/baseline_currency_rupee_24"
                            android:focusable="false"
                            android:textColor="@color/blue"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@id/mauritydatepublic" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/maurityvaluepublic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:text="Maturity Value"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            app:layout_constraintTop_toBottomOf="@+id/answermatururitydatepublic" />


                        <EditText
                            android:id="@+id/answermatururityvaluepublic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:drawableEnd="@drawable/baseline_currency_rupee_24"
                            android:focusable="false"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@id/maurityvaluepublic" />


                        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                            android:id="@+id/Sharebtnpublicprovident"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:padding="@dimen/_1sdp"
                            android:text="share"
                            android:textColor="@color/background"
                            android:textSize="@dimen/_16sdp"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>